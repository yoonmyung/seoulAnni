<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/two_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/help" />

        <RelativeLayout
            android:id="@+id/two_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="48dp"
            android:layout_marginVertical="10dp">

            <RelativeLayout
                android:id="@+id/line_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/gg"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/round_background" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:fontFamily="@font/regular"
                        android:textStyle="bold"
                        android:text="지하철 호선 선택"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/lineSpinner"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:background="@color/colorPrimary"
                        android:entries="@array/line"
                        android:fontFamily="@font/regular"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_pick">

                <ImageView
                    android:id="@+id/gg2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_background" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:fontFamily="@font/regular"
                        android:textStyle="bold"
                        android:text="지하철 역 선택"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/subwaySpinner"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView10"
                        android:background="@color/colorPrimary"
                        android:entries="@array/line"
                        android:fontFamily="@font/regular"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/siren"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/two_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="@font/regular"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="48dp"
            android:text="검사 요청하기" />
    </RelativeLayout>

</RelativeLayout>